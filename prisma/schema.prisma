// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model ImageOptimization {
  id              String   @id @default(uuid())
  shop            String
  productId       String
  imageId         String
  originalUrl     String
  originalGid     String?
  originalAlt     String?  // Original alt text before SEO rename
  backupUrl       String?  // Permanent backup URL in Shopify Files for safe revert
  webpUrl         String?
  webpGid         String?
  status          String   @default("pending")
  fileSize        Int?
  webpFileSize    Int?
  altTextUpdated  Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([shop, imageId])
  @@index([shop, status])
}

model OptimizationJob {
  id              String   @id @default(uuid())
  shop            String
  status          String   @default("running") // running, completed, cancelled
  totalImages     Int      @default(0)
  processedCount  Int      @default(0)
  errorCount      Int      @default(0)
  skippedCount    Int      @default(0)
  totalSaved      Int      @default(0)
  currentImage    String?  // Name of image currently being processed
  cancelled       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([shop, status])
}

model SeoSettings {
  id                String   @id @default(uuid())
  shop              String   @unique
  altTextTemplate   String   @default("#product_name#")
  fileNameTemplate  String   @default("#product_name#")
  autoApplyOnOptimize Boolean @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
